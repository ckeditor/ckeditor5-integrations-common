{
  "name": "@ckeditor/ckeditor5-integrations-common",
  "version": "2.2.3",
  "description": "This package implements common utility modules for integration projects.",
  "keywords": [
    "wysiwyg",
    "rich text",
    "editor",
    "html",
    "contentEditable",
    "editing",
    "ckeditor",
    "ckeditor5",
    "ckeditor 5"
  ],
  "author": "CKSource (http://cksource.com/)",
  "license": "SEE LICENSE IN LICENSE.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/ckeditor/ckeditor5-integrations-common.git"
  },
  "bugs": {
    "url": "https://github.com/ckeditor/ckeditor5-integrations-common/issues"
  },
  "homepage": "https://github.com/ckeditor/ckeditor5-integrations-common",
  "scripts": {
    "nice": "ckeditor5-dev-changelog-create-entry",
    "build": "pnpm build:lib && pnpm build:test-utils",
    "build:lib": "vite build",
    "build:test-utils": "vite build --config vite.test-utils.config.ts",
    "postinstall": "node ./scripts/postinstall.js",
    "dev": "vite",
    "lint": "eslint",
    "test": "vitest run --coverage",
    "test:watch": "vitest --ui --watch",
    "test:check:types": "tsc --noEmit -p ./tests/tsconfig.json",
    "release:prepare-changelog": "node ./scripts/preparechangelog.js",
    "release:prepare-packages": "node ./scripts/preparepackages.js",
    "release:publish-packages": "node ./scripts/publishpackages.js"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE.md"
  ],
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.14.0",
    "yarn": "\n\n┌─────────────────────────┐\n│  Hey, we use pnpm now!  │\n└─────────────────────────┘\n\n"
  },
  "peerDependencies": {
    "ckeditor5": ">=42.0.0 || ^0.0.0-nightly"
  },
  "type": "module",
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.umd.cjs"
      }
    },
    "./test-utils": {
      "import": {
        "types": "./dist/test-utils/index.d.ts",
        "default": "./dist/test-utils/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "lint-staged": {
    "**/*": [
      "eslint --quiet"
    ]
  },
  "devDependencies": {
    "@ckeditor/ckeditor5-dev-bump-year": "^53.3.2",
    "@ckeditor/ckeditor5-dev-changelog": "^53.3.2",
    "@ckeditor/ckeditor5-dev-ci": "^53.3.2",
    "@ckeditor/ckeditor5-dev-release-tools": "^53.3.2",
    "@ckeditor/ckeditor5-dev-utils": "^53.3.2",
    "@vitest/browser": "^2.1.9",
    "@vitest/coverage-istanbul": "^2.1.4",
    "@vitest/ui": "^2.1.4",
    "ckeditor5": "^45.2.2",
    "ckeditor5-premium-features": "^45.2.2",
    "coveralls": "^3.1.1",
    "eslint": "^9.26.0",
    "eslint-config-ckeditor5": "^10.0.0",
    "eslint-plugin-ckeditor5-rules": "^10.0.0",
    "globals": "^16.1.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.9",
    "minimist": "^1.2.8",
    "semver": "^7.6.3",
    "tough-cookie": ">=4.1.3",
    "typescript": "^5.5.4",
    "upath": "^2.0.1",
    "vite": "^5.4.0",
    "vite-plugin-dts": "^4.0.2",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.9",
    "webdriverio": "^9.12.7"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.0"
    }
  }
}
